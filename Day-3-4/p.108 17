#include<iostream>
#include<conio.h>
using namespace std;
long double fact(int N)
{
    if(N < 0) 
        return 0; 
    if (N == 0) 
        return 1; 
    else
        return N * fact(N - 1); 
}

int main()
{
    setlocale(LC_ALL, "Russian");
    cout << "Îâåò: " << (2*fact(5)+3*fact(8))/(fact(6)+fact(4));
    getch(); 
    return 0;
    
}
